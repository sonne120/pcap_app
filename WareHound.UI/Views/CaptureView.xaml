<UserControl x:Class="WareHound.UI.Views.CaptureView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:scottplot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
             xmlns:controls="clr-namespace:WareHound.UI.Controls"
             prism:ViewModelLocator.AutoWireViewModel="True"
             Background="{StaticResource PrimaryBrush}">

    <UserControl.Resources>
        <!-- Stats panel uses app theme colors -->
        <SolidColorBrush x:Key="StatsPanelBg" Color="{StaticResource SecondaryColor}"/>
        <SolidColorBrush x:Key="StatsHeaderBg" Color="{StaticResource TertiaryColor}"/>
        <SolidColorBrush x:Key="StatsCardBg" Color="{StaticResource TertiaryColor}"/>
        <SolidColorBrush x:Key="StatsTabActiveBg" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="StatsTabInactiveBg" Color="{StaticResource BorderLightColor}"/>
        <SolidColorBrush x:Key="StatsTextPrimary" Color="{StaticResource TextPrimaryColor}"/>
        <SolidColorBrush x:Key="StatsTextSecondary" Color="{StaticResource TextSecondaryColor}"/>
        <SolidColorBrush x:Key="StatsProgressBg" Color="{StaticResource BorderLightColor}"/>
        
        <!-- Progress bar colors -->
        <SolidColorBrush x:Key="ProgressBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="ProgressGreen" Color="#10B981"/>
        <SolidColorBrush x:Key="ProgressOrange" Color="#F59E0B"/>
        <SolidColorBrush x:Key="ProgressPurple" Color="#8B5CF6"/>
        
        <!-- Tab button style -->
        <Style x:Key="StatsTabButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" Background="{StaticResource StatsTabInactiveBg}" 
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource StatsTabActiveBg}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource BorderBrush}"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsChecked" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentLightBrush}"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Stat card style -->
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource StatsCardBg}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10,8"/>
        </Style>
    </UserControl.Resources>

    <!-- Wireshark-like 2-pane layout with bottom status bar -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" MinHeight="150"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="*" MinHeight="150"/>
            </Grid.RowDefinitions>

        <!-- Packet List (Top Pane) -->
        <DataGrid x:Name="PacketGrid" Grid.Row="0" 
                  AutomationProperties.AutomationId="PacketDataGrid"
                  ItemsSource="{Binding Packets}" 
                  SelectedItem="{Binding SelectedPacket}"
                  VirtualizingPanel.IsVirtualizing="True"
                  VirtualizingPanel.VirtualizationMode="Recycling"
                  VirtualizingPanel.ScrollUnit="Pixel"
                  EnableRowVirtualization="True">
            
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Save to Dashboard" Command="{Binding SaveToDashboardCommand}"/>
                    <Separator/>
                    <MenuItem Header="Copy Source IP" Command="{Binding CopyCommand}" CommandParameter="SourceIp"/>
                    <MenuItem Header="Copy Dest IP" Command="{Binding CopyCommand}" CommandParameter="DestIp"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
            
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="{Binding Protocol, Converter={StaticResource ProtocolToColor}}"/>
                    <Setter Property="Foreground" Value="#1E1E1E"/>
                    <EventSetter Event="MouseDoubleClick" Handler="DataGridRow_MouseDoubleClick"/>
                </Style>
            </DataGrid.RowStyle>
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="No." Binding="{Binding Number}" Width="50"/>
                <DataGridTextColumn Header="Time" Binding="{Binding TimeDisplay}" Width="80"/>
                <DataGridTextColumn x:Name="SourceMacColumn" Header="Src MAC" Binding="{Binding SourceMac}" Width="100"/>
                <DataGridTextColumn Header="Source" Binding="{Binding SourceIp}" Width="100"/>
                <DataGridTextColumn x:Name="DestMacColumn" Header="Dst MAC" Binding="{Binding DestMac}" Width="100"/>
                <DataGridTextColumn Header="Destination" Binding="{Binding DestIp}" Width="100"/>
                <DataGridTextColumn Header="Protocol" Binding="{Binding Protocol}" Width="60"/>
                <DataGridTextColumn Header="Src Port" Binding="{Binding SourcePort}" Width="55"/>
                <DataGridTextColumn Header="Dst Port" Binding="{Binding DestPort}" Width="55"/>
                <DataGridTextColumn Header="Info" Binding="{Binding Info}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch"/>

        <!-- Tabbed Details Panel -->
        <Border Grid.Row="2" Background="{StaticResource SecondaryBrush}" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="4" Margin="4,2,4,4">
            
                <!-- Tabs (Packet Details / Hex Dump) -->
                <TabControl Background="Transparent" BorderThickness="0">
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Border x:Name="Border" Padding="12,6" Margin="0,0,2,0" 
                                                Background="{StaticResource TertiaryBrush}"
                                                BorderBrush="{StaticResource BorderBrush}" 
                                                BorderThickness="1,1,1,0" CornerRadius="4,4,0,0">
                                            <TextBlock x:Name="HeaderText" Text="{TemplateBinding Header}" 
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       FontWeight="Normal"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="{StaticResource AccentBrush}"/>
                                                <Setter TargetName="HeaderText" Property="Foreground" Value="White"/>
                                                <Setter TargetName="HeaderText" Property="FontWeight" Value="SemiBold"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="{StaticResource BorderLightBrush}"/>
                                            </Trigger>
                                            <MultiTrigger>
                                                <MultiTrigger.Conditions>
                                                    <Condition Property="IsSelected" Value="True"/>
                                                    <Condition Property="IsMouseOver" Value="True"/>
                                                </MultiTrigger.Conditions>
                                                <Setter TargetName="Border" Property="Background" Value="{StaticResource AccentLightBrush}"/>
                                            </MultiTrigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabControl.Resources>
                    
                    <!-- Packet Details Tab -->
                    <TabItem Header="Packet Details">
                        <TreeView x:Name="PacketDetailsPanel"
                                  AutomationProperties.AutomationId="PacketDetailsPanel"
                                  ItemsSource="{Binding PacketDetails}" 
                                  Background="Transparent" BorderThickness="0" Padding="4">
                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                    <TextBlock Text="{Binding Text}" FontFamily="Consolas" 
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>
                        </TreeView>
                    </TabItem>
                    
                    <!-- Hex Dump Tab -->
                    <TabItem Header="Hex Dump">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                            <TextBlock x:Name="HexDumpPanel"
                                       AutomationProperties.AutomationId="HexDumpPanel"
                                       Text="{Binding PacketHexDump}"
                                       FontFamily="Consolas" FontSize="12" Padding="8"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
        </Border>
        </Grid>
        
        <!-- Statistics Status Bar at Bottom -->
        <controls:StatisticsStatusBar Grid.Row="1" 
                                       x:Name="StatisticsBar"
                                       DataContext="{Binding StatisticsStatusBarViewModel}"/>
    </Grid>
</UserControl>
