<Window x:Class="WareHound.UI.Views.PacketDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Packet Details" 
        Height="380" Width="650"
        MinHeight="300" MinWidth="500"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource PrimaryBrush}">

    <Window.Resources>
        <Style x:Key="DetailLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="DetailValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource SecondaryBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1"
                Padding="12,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸ“¦" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock x:Name="HeaderProtocol" Text="TCP" FontSize="14" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock x:Name="HeaderTime" Text="00:00:00.000" FontSize="10" 
                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>
                
                <Border Grid.Column="2" Background="{DynamicResource AccentBrush}" CornerRadius="3" 
                        Padding="8,4" VerticalAlignment="Center">
                    <TextBlock x:Name="HeaderPacketNo" Text="Packet #1" Foreground="White" FontWeight="Medium" FontSize="11"/>
                </Border>
            </Grid>
        </Border>

        <!-- Content -->
        <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0" Margin="10">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border x:Name="Border" Padding="10,5" Margin="0,0,3,0" 
                                        Background="{DynamicResource TertiaryBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}" 
                                        BorderThickness="1" CornerRadius="4">
                                    <TextBlock x:Name="HeaderText" Text="{TemplateBinding Header}" 
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               FontWeight="Normal" FontSize="11"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                        <Setter TargetName="HeaderText" Property="Foreground" Value="White"/>
                                        <Setter TargetName="HeaderText" Property="FontWeight" Value="SemiBold"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource BorderLightBrush}"/>
                                    </Trigger>
                                    <MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsSelected" Value="True"/>
                                            <Condition Property="IsMouseOver" Value="True"/>
                                        </MultiTrigger.Conditions>
                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource AccentLightBrush}"/>
                                    </MultiTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!-- Details Tab -->
            <TabItem Header="Details">
                <Grid Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Network Layer -->
                    <Border Grid.Row="0" Grid.Column="0" Background="{DynamicResource SecondaryBrush}" CornerRadius="4" 
                            Padding="8" Margin="0,0,4,4" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="NETWORK" FontSize="9" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Src IP:" Style="{DynamicResource DetailLabelStyle}"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="SourceIp" Text="0.0.0.0" Style="{DynamicResource DetailValueStyle}"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Dst IP:" Style="{DynamicResource DetailLabelStyle}"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="DestIp" Text="0.0.0.0" Style="{DynamicResource DetailValueStyle}"/>
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Src Port:" Style="{DynamicResource DetailLabelStyle}"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="SourcePort" Text="0" Style="{DynamicResource DetailValueStyle}"/>
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Dst Port:" Style="{DynamicResource DetailLabelStyle}"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="DestPort" Text="0" Style="{DynamicResource DetailValueStyle}"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Data Link Layer -->
                    <Border Grid.Row="0" Grid.Column="1" Background="{DynamicResource SecondaryBrush}" CornerRadius="4" 
                            Padding="8" Margin="4,0,0,4" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="DATA LINK" FontSize="9" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Src MAC:" Style="{DynamicResource DetailLabelStyle}"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="SourceMac" Text="00:00:00:00:00:00" Style="{DynamicResource DetailValueStyle}"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Dst MAC:" Style="{DynamicResource DetailLabelStyle}"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="DestMac" Text="00:00:00:00:00:00" Style="{DynamicResource DetailValueStyle}"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Additional Info -->
                    <Border Grid.Row="1" Grid.ColumnSpan="2" Background="{DynamicResource SecondaryBrush}" CornerRadius="4" 
                            Padding="8" Margin="0,4,0,0" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="INFO" FontSize="9" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <TextBlock Text="Protocol:" Style="{DynamicResource DetailLabelStyle}"/>
                                    <TextBlock x:Name="Protocol" Text="TCP" Style="{DynamicResource DetailValueStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <TextBlock Text="ID:" Style="{DynamicResource DetailLabelStyle}"/>
                                    <TextBlock x:Name="PacketId" Text="0" Style="{DynamicResource DetailValueStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2" Orientation="Horizontal">
                                    <TextBlock Text="Host:" Style="{DynamicResource DetailLabelStyle}"/>
                                    <TextBlock x:Name="HostName" Text="Unknown" Style="{DynamicResource DetailValueStyle}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="3" Orientation="Horizontal">
                                    <TextBlock Text="Time:" Style="{DynamicResource DetailLabelStyle}"/>
                                    <TextBlock x:Name="CaptureTime" Text="00:00:00" Style="{DynamicResource DetailValueStyle}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Hex Dump Tab -->
            <TabItem Header="Hex Dump">
                <Border Background="{DynamicResource SecondaryBrush}" CornerRadius="6" 
                        Margin="0,10,0,0" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                        <TextBlock x:Name="HexDump" 
                                   FontFamily="Consolas" FontSize="11" Padding="10"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Text="00000000  00 00 00 00 00 00 00 00  00 00 00 00 00 00 00 00  ................"/>
                    </ScrollViewer>
                </Border>
            </TabItem>
        </TabControl>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{DynamicResource SecondaryBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0"
                Padding="12,8">
            <Grid>
                <Button Content="Close" HorizontalAlignment="Right" 
                        Style="{DynamicResource SecondaryButton}"
                        Padding="16,5" FontSize="12" Click="CloseButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
