<UserControl x:Class="WareHound.UI.Views.StatisticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             Background="{DynamicResource PrimaryBrush}">

    <UserControl.Resources>
        <!-- Card Style -->
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SecondaryBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <!-- Stat Value Style -->
        <Style x:Key="StatValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
        </Style>
        
        <!-- Stat Label Style -->
        <Style x:Key="StatLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="Capture Statistics" FontSize="20" FontWeight="SemiBold" 
                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                <TextBlock Text="Real-time packet analysis and protocol breakdown" 
                           FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,4,0,0"/>
            </StackPanel>
            
            <!-- Toggle between C# and C++ statistics -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <Button x:Name="RefreshButton" AutomationProperties.AutomationId="RefreshButton"
                        Style="{StaticResource ModernButtonStyle}"
                        Content="Refresh" Command="{Binding RefreshCommand}" Margin="0,0,16,0" Padding="16,6"/>
                <TextBlock Text="C# Stats" VerticalAlignment="Center" Margin="0,0,8,0"
                           Foreground="{DynamicResource TextSecondaryBrush}" FontSize="11"/>
                <ToggleButton IsChecked="{Binding UseNativeStatistics}" Width="48" Height="24"
                              Style="{DynamicResource ToggleSwitchStyle}"
                              ToolTip="{Binding StatsSourceText}"/>
                <TextBlock Text="C++ Stats" VerticalAlignment="Center" Margin="8,0,0,0"
                           Foreground="{DynamicResource TextSecondaryBrush}" FontSize="11"/>
                <TextBlock Text="(Start capture first)" VerticalAlignment="Center" Margin="4,0,0,0"
                           Foreground="{DynamicResource WarningBrush}" FontSize="10"
                           Visibility="{Binding IsNativeStatsAvailable, Converter={StaticResource InverseBoolToVisibility}}"/>
            </StackPanel>
        </Grid>

        <!-- Summary Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,16" AutomationProperties.AutomationId="PacketCounts">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Packets -->
            <Border Grid.Column="0" Style="{StaticResource StatCard}" Margin="0,0,8,0">
                <StackPanel>
                    <TextBlock Text="{Binding TotalPackets, StringFormat=N0}" Style="{StaticResource StatValue}"/>
                    <TextBlock Text="TOTAL PACKETS" Style="{StaticResource StatLabel}"/>
                </StackPanel>
            </Border>

            <!-- Packets/sec -->
            <Border Grid.Column="1" Style="{StaticResource StatCard}" Margin="4,0">
                <StackPanel>
                    <TextBlock Text="{Binding PacketsPerSecond, StringFormat=F1}" Style="{StaticResource StatValue}"/>
                    <TextBlock Text="PACKETS/SEC" Style="{StaticResource StatLabel}"/>
                </StackPanel>
            </Border>

            <!-- Capture Time -->
            <Border Grid.Column="2" Style="{StaticResource StatCard}" Margin="4,0">
                <StackPanel>
                    <TextBlock Text="{Binding CaptureTime}" Style="{StaticResource StatValue}" FontSize="24"/>
                    <TextBlock Text="CAPTURE TIME" Style="{StaticResource StatLabel}"/>
                </StackPanel>
            </Border>

            <!-- Unique Protocols -->
            <Border Grid.Column="3" Style="{StaticResource StatCard}" Margin="4,0">
                <StackPanel>
                    <TextBlock Text="{Binding UniqueProtocols}" Style="{StaticResource StatValue}"/>
                    <TextBlock Text="PROTOCOLS" Style="{StaticResource StatLabel}"/>
                </StackPanel>
            </Border>

            <!-- Unique IPs -->
            <Border Grid.Column="4" Style="{StaticResource StatCard}" Margin="8,0,0,0">
                <StackPanel>
                    <TextBlock Text="{Binding UniqueIPs}" Style="{StaticResource StatValue}"/>
                    <TextBlock Text="UNIQUE IPs" Style="{StaticResource StatLabel}"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Details Grid -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Protocol Breakdown -->
            <Border Grid.Column="0" Style="{StaticResource StatCard}" Margin="0,0,8,0" AutomationProperties.AutomationId="ProtocolStats">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Protocol Breakdown" FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,12"/>

                    <ItemsControl Grid.Row="1" ItemsSource="{Binding ProtocolStats}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Protocol}" 
                                               Foreground="{DynamicResource TextPrimaryBrush}" FontSize="12"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" 
                                               Text="{Binding PacketCount, StringFormat=N0}" 
                                               Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12"/>

                                    <!-- Progress Bar -->
                                    <Border Grid.Row="1" Grid.ColumnSpan="2" Height="4" CornerRadius="2" 
                                            Background="{DynamicResource TertiaryBrush}" Margin="0,4,0,0">
                                        <Border CornerRadius="2" HorizontalAlignment="Left"
                                                Background="{DynamicResource AccentBrush}"
                                                Width="{Binding Percentage, Converter={StaticResource PercentToWidth}}"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>

            <!-- Top Talkers -->
            <Border Grid.Column="1" Style="{StaticResource StatCard}" Margin="4,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Top Source IPs" FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,8"/>

                    <ItemsControl Grid.Row="1" ItemsSource="{Binding TopSourceIPs}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding IP}" 
                                               Foreground="{DynamicResource TextPrimaryBrush}" FontSize="11" 
                                               FontFamily="Consolas"/>
                                    <TextBlock Grid.Column="1" Text="{Binding PacketCount, StringFormat=N0}" 
                                               Foreground="{DynamicResource TextSecondaryBrush}" FontSize="11"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <TextBlock Grid.Row="2" Text="Top Destination IPs" FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,16,0,8"/>

                    <ItemsControl Grid.Row="3" ItemsSource="{Binding TopDestIPs}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding IP}" 
                                               Foreground="{DynamicResource TextPrimaryBrush}" FontSize="11" 
                                               FontFamily="Consolas"/>
                                    <TextBlock Grid.Column="1" Text="{Binding PacketCount, StringFormat=N0}" 
                                               Foreground="{DynamicResource TextSecondaryBrush}" FontSize="11"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>

            <!-- Top Ports -->
            <Border Grid.Column="2" Style="{StaticResource StatCard}" Margin="8,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Top Destination Ports" FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,12"/>

                    <ItemsControl Grid.Row="1" ItemsSource="{Binding TopPorts}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" Background="{DynamicResource AccentBrush}" 
                                            CornerRadius="3" Padding="6,2" Margin="0,0,8,0">
                                        <TextBlock Text="{Binding Port}" Foreground="White" FontSize="11" 
                                                   FontWeight="Medium"/>
                                    </Border>
                                    <TextBlock Grid.Column="1" Text="{Binding ServiceName}" 
                                               Foreground="{DynamicResource TextSecondaryBrush}" FontSize="11" 
                                               VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="{Binding PacketCount, StringFormat=N0}" 
                                               Foreground="{DynamicResource TextPrimaryBrush}" FontSize="11" 
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
