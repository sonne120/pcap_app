<prism:PrismApplication x:Class="WareHound.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:conv="clr-namespace:WareHound.UI.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- MahApps.Metro resources -->
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Fonts.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Themes/Dark.Blue.xaml" />
                
                <!-- FluentWPF resources -->
                <ResourceDictionary Source="pack://application:,,,/FluentWPF;component/Styles/Controls.xaml" />
                
                <!-- App themes (load after MahApps to allow overrides) -->
                <ResourceDictionary Source="Themes/Colors.xaml"/>
                <ResourceDictionary Source="Themes/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Global Converters -->
            <conv:ProtocolToColorConverter x:Key="ProtocolToColor"/>
            <conv:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
            <conv:NullToVisibilityConverter x:Key="NullToVisibility"/>
            <conv:InverseBoolConverter x:Key="InverseBool"/>
            <conv:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>
            <conv:BoolToStatusConverter x:Key="BoolToStatus"/>
            <conv:PercentToWidthConverter x:Key="PercentToWidth"/>
            <conv:AllFalseConverter x:Key="AllFalseConverter"/>
            <conv:IntToBoolConverter x:Key="IntToBoolConverter"/>
            <conv:IntToVisibilityConverter x:Key="IntToVisibilityConverter"/>
            <conv:PercentageToWidthConverter x:Key="PercentageToWidthConverter"/>
            <conv:StringToColorConverter x:Key="StringToColorConverter"/>
            <conv:LessThanConverter x:Key="LessThanConverter"/>
            <conv:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</prism:PrismApplication>
